<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddWorkerActivity">

    <Button
        android:id="@+id/add_worker_activity_select_image_button"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@color/Default2"
        android:text="choose image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_worker_activity_name_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/default_edit_text"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColorHint="@color/Default2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_worker_activity_select_image_button" />

    <EditText
        android:id="@+id/add_worker_activity_email_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/default_edit_text"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColorHint="@color/Default2"
        app:layout_constraintEnd_toEndOf="@+id/add_worker_activity_name_edit_text"
        app:layout_constraintStart_toStartOf="@+id/add_worker_activity_name_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/add_worker_activity_name_edit_text" />

    <EditText
        android:id="@+id/add_worker_activity_phone_number_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/default_edit_text"
        android:ems="10"
        android:hint="Phone number"
        android:inputType="phone"
        android:padding="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColorHint="@color/Default2"
        app:layout_constraintEnd_toEndOf="@+id/add_worker_activity_email_edit_text"
        app:layout_constraintStart_toStartOf="@+id/add_worker_activity_email_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/add_worker_activity_email_edit_text" />

    <EditText
        android:id="@+id/add_worker_activity_password_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/default_edit_text"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColorHint="@color/Default2"
        app:layout_constraintEnd_toEndOf="@+id/add_worker_activity_phone_number_edit_text"
        app:layout_constraintStart_toStartOf="@+id/add_worker_activity_phone_number_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/add_worker_activity_phone_number_edit_text" />

    <Button
        android:id="@+id/add_worker_activity_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/default_button"
        android:text="submit"
        android:textColor="@color/Default_font_color_light"
        app:layout_constraintEnd_toEndOf="@+id/add_worker_activity_password_edit_text"
        app:layout_constraintStart_toStartOf="@+id/add_worker_activity_password_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/add_worker_activity_password_edit_text" />

</androidx.constraintlayout.widget.ConstraintLayout>